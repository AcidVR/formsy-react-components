{
  "name": "formsy-react-components",
  "version": "0.10.0",
  "description": "A set of React JS components for use in a formsy-react form. Markup adheres to Bootstrap structure.",
  "scripts": {
    "test": "jest --noStackTrace",
    "test-full": "jest --coverage --noHighlight --verbose",
    "lint": "eslint src",
    "release": "npm run release-clean & npm run release-transpile",
    "release-clean": "rm -f release/**/*.map",
    "release-transpile": "NODE_ENV=production babel src -d release --ignore __tests__",
    "dev": "babel src --watch -d release --source-maps --ignore __tests__",
    "examples": "webpack-dev-server --config examples/webpack.config --port 3000 --content-base examples",
    "gh-pages": "NODE_ENV=production webpack -p --config examples/webpack.config"
  },
  "main": "./release/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/twisty/formsy-react-components.git"
  },
  "keywords": [
    "react",
    "formsy-react",
    "bootstrap",
    "react-component"
  ],
  "author": "Tim Brayshaw <tim@brayshaw.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/twisty/formsy-react-components/issues"
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/enzyme",
      "<rootDir>/node_modules/formsy-react",
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils"
    ]
  },
  "peerDependencies": {
    "formsy-react": "^0.19.0",
    "react": "^15.4.0"
  },
  "dependencies": {
    "classnames": "^2.2.5"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^17.0.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-react-display-name": "^6.8.0",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.0.12",
    "babel-preset-react": "^6.0.12",
    "babel-preset-stage-0": "^6.5.0",
    "enzyme": "^2.2.0",
    "eslint": "^3.12.1",
    "eslint-plugin-react": "^6.8.0",
    "formsy-react": "^0.19.0",
    "jest-cli": "^17.0.3",
    "lodash.debounce": "^4.0.6",
    "react": "^15.4.0",
    "react-addons-test-utils": "^15.4.0",
    "react-dom": "^15.4.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  }
}
